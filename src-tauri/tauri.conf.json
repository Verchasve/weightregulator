{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "weight-controller-0.1",
  "version": "0.1.0",
  "identifier": "com.yourdomain.weightcontroller",
   
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
    
  },
  "app": {
   
    "windows": [
      {
        "title": "weight-controller-0.1",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
   
    "active": true,
    "targets": "all",
   
    
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
